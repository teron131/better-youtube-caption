{
  "manifest_version": 3,
  "name": "Better YouTube Caption",
  "version": "1.0",
  "description": "Refine YouTube captions using LLM",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://api.scrapecreators.com/v1/youtube/*",
    "https://openrouter.ai/api/v1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": [
        "src/constants.js",
        "src/url.js",
        "content.js"
      ],
      "css": ["subtitles.css"],
      "run_at": "document_idle"
    }
  ]
}
